<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context="com.example.lfy.basicframes.ui.activity.PermissionsActivity">

        <com.example.lfy.basicframes.view.TitleBar
            app:titleBarBackground="@color/main"
            app:titleBarTitle="权限测试"
            app:titleBarLeftImage="@drawable/im_back"
            android:id="@+id/title_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_call_phone"
            android:layout_marginTop="@dimen/x5"
            android:background="#98ccbc"
            android:gravity="center"
            android:text="call phone"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_marginTop="@dimen/x5"
            android:background="#98ccbc"
            android:gravity="center"
            android:text="定位"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</layout>

